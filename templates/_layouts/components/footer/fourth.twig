{#            Fourth Column #}
<div class="font-bold"><a href="/news">Latest News</a></div>
<div class="">
    {% for item in craft.entries.section('news').limit(3).all() %}
        <a href="{{ item.url }}">
            <div class="py-3">
                <h3>{{ item.title }}</h3>
                <p>{{ item.newsContent }}</p>
                <p>{{ item.postDate|date('M j, Y') }}</p>
            </div>
        </a>
    {% endfor %}
</div>